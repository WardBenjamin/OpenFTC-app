<?xml version="1.0" encoding="utf-8"?><!-- FtcCommon manifest -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qualcomm.ftccommon">

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        android:required="true" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher">
        <activity
            android:name=".FtcRobotControllerSettingsActivity"
            android:exported="true"
            android:label="@string/settings_activity"></activity>
        <activity
            android:name=".configuration.FtcLoadFileActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:label="@string/configure_activity"></activity>
        <activity
            android:name=".configuration.ConfigureFromTemplateActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:label="@string/title_activity_configfromtemplate"></activity>
        <activity
            android:name=".ViewLogsActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:label="@string/view_logs_activity"></activity>
        <activity
            android:name=".configuration.FtcConfigurationActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".configuration.FtcNewFileActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".ConfigWifiDirectActivity"
            android:exported="true"
            android:label="@string/title_activity_config_wifi_direct" />
        <activity
            android:name=".FtcAdvancedRCSettingsActivity"
            android:exported="true"
            android:label="@string/titleAdvancedRCSettings"></activity>
        <activity
            android:name=".FtcLynxFirmwareUpdateActivity"
            android:exported="true"></activity>
        <activity
            android:name=".FtcLynxModuleAddressUpdateActivity"
            android:exported="true"></activity>
        <activity
            android:name=".FtcWifiDirectChannelSelectorActivity"
            android:exported="true"
            android:label="@string/title_activity_wifi_channel_selector"></activity>
        <activity
            android:name=".FtcWifiDirectRememberedGroupsActivity"
            android:exported="true"
            android:label="@string/title_activity_wifi_remembered_groups_editor"></activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/about_activity"></activity>
        <activity
            android:name=".configuration.EditSwapUsbDevices"
            android:configChanges="orientation|screenSize"
            android:label="@string/edit_swap_devices_activity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".configuration.EditMotorControllerActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/edit_motor_controller_activity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".configuration.EditLegacyMotorControllerActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/edit_motor_controller_activity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".configuration.EditMotorListActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/edit_motor_controller_activity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".configuration.EditServoControllerActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/edit_servo_controller_activity"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
        <activity
            android:name=".configuration.EditLegacyServoControllerActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/edit_servo_controller_activity"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
        <activity
            android:name=".configuration.EditServoListActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/edit_servo_controller_activity"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
        <activity
            android:name=".configuration.EditLegacyModuleControllerActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/edit_legacy_module_controller_activity"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
        <activity
            android:name=".configuration.EditMatrixControllerActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/edit_matrix_controller_activity"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
        <activity
            android:name=".configuration.EditDeviceInterfaceModuleActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/edit_core_device_interface_module_controller_activity"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
        <activity
            android:name=".configuration.EditLynxModuleActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/edit_lynx_module_controller_activity"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
        <activity
            android:name=".configuration.EditLynxUsbDeviceActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/edit_lynx_usb_device_activity"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
        <activity
            android:name=".configuration.EditPWMDevicesActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/edit_pwm_devices_activity"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
        <activity
            android:name=".configuration.EditAnalogInputDevicesActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/edit_analog_input_devices_activity"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
        <activity
            android:name=".configuration.EditDigitalDevicesActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/edit_digital_devices_activity"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
        <activity
            android:name=".configuration.EditDigitalDevicesActivityLynx"
            android:configChanges="orientation|screenSize"
            android:label="@string/edit_digital_devices_activity_lynx"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
        <activity
            android:name=".configuration.EditI2cDevicesActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/edit_i2c_devices_activity"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
        <activity
            android:name=".configuration.EditI2cDevicesActivityLynx"
            android:configChanges="orientation|screenSize"
            android:label="@string/edit_i2c_devices_activity"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
        <activity
            android:name=".configuration.EditAnalogOutputDevicesActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/edit_analog_output_devices_activity"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>

        <!-- Assistant that autostarts the robot controller on android boot (if it's supposed to) -->
        <receiver
            android:name="org.firstinspires.ftc.ftccommon.internal.RunOnBoot"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>

        <!-- A service that will auto-restart the robot controller if it crashes (if it's supposed to) -->
        <service
            android:name="org.firstinspires.ftc.ftccommon.internal.FtcRobotControllerWatchdogService"
            android:enabled="true" />

        <activity android:name="org.ftcopen.sync.SyncActivity"></activity>
    </application>

</manifest>